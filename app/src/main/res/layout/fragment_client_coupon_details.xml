<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sparecode.vipul.onlynow.fragments.ClientCouponDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <android.support.v4.view.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        app:srcCompat="@drawable/natural"
                        android:id="@+id/coupon_pager"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/coupondetails_previous_icon"
                        android:id="@+id/previous_image"
                        android:layout_gravity="center_vertical|left"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/details_page_next_icon"
                        android:id="@+id/next_image"
                        android:layout_gravity="center_vertical|right"/>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:layout_marginTop="@dimen/dp_10"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_couponname"
                android:textColor="@color/black"
                app:typeface="lato_regular"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/text_coupontype">
                    <com.sparecode.vipul.onlynow.widgets.LatoTextView
                        android:text="@string/validuntill"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/text_valid"
                        app:typeface="lato_regular"
                        android:visibility="visible"/>

                    <com.sparecode.vipul.onlynow.widgets.LatoTextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/text_coupondate"
                        app:typeface="lato_regular"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/dp_5"/>
                </LinearLayout>
                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/text_coupontype"
                    app:typeface="lato_regular"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/coupon_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/text_coupontime"
                    app:typeface="lato_regular"
                    android:visibility="gone"/>

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/text_couponplace"
                    app:typeface="lato_regular"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear">

            <com.sparecode.vipul.onlynow.widgets.LatoEditText
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/blackborderedittext"
                android:padding="@dimen/dp_10"
                android:hint=""
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/coupan"
                app:typeface="lato_regular"/>

            <com.sparecode.vipul.onlynow.widgets.LatoEditText
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/blackborderedittext"
                android:padding="@dimen/dp_10"
                android:hint=""
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/shopname"
                app:typeface="lato_regular"/>

            <com.sparecode.vipul.onlynow.widgets.LatoEditText
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/blackborderedittext"
                android:padding="@dimen/dp_25"
                android:hint=""
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/coupandetail"
                app:typeface="lato_regular"/>
            </LinearLayout>

            <com.sparecode.vipul.onlynow.widgets.LatoButton
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@color/headercolor"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textSize="@dimen/dp_20"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/save"
                android:layout_marginBottom="@dimen/dp_10"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
