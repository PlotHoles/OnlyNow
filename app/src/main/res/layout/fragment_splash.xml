<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sparecode.vipul.onlynow.fragments.SplashFragment"
    android:background="@drawable/bg_image">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next_icon"
        android:id="@+id/image_next"
        android:layout_gravity="right|center_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sparecode.vipul.onlynow.widgets.LatoTextView
            android:text="@string/client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_client"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp_10"
            app:typeface="lato_bold"/>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/text_client">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo_white"
                    android:id="@+id/imagelogowhite" />

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/splash_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_des"
                    android:gravity="center"
                    android:textColor="@color/white"
                    app:typeface="lato_bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_175"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2">


                <com.sparecode.vipul.onlynow.widgets.LatoButton
                    android:textAllCaps="false"
                    android:text="@string/create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createaccount_button"
                    android:background="@color/orange"
                    android:textColor="@color/white"
                    app:typeface="lato_bold"/>

                <com.sparecode.vipul.onlynow.widgets.LatoButton
                    android:layout_marginTop="@dimen/dp_15"
                    android:textAllCaps="false"
                    android:text="@string/sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/signin_button"
                    android:background="@color/pink"
                    android:textColor="@color/white"
                    app:typeface="lato_bold"/>
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
