<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sparecode.vipul.onlynow.fragments.SigninFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Doesn't have a account yet? Please sign up."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_signup"
            android:layout_marginBottom="@dimen/dp_10"
            android:clickable="true"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_above="@+id/text_signup">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_above="@+id/text_signup">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_black"
                android:id="@+id/image_logo" />

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:text="Get best deals which is available \nOnly Now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_des"
                android:gravity="center"/>

            <Button
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="Log in with Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_facebook" />

            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="We'll never post anything to \nFacebook without your permission."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_facebook" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/text_signup_or" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/text_signup_or"
                    android:layout_toLeftOf="@+id/text_signup_or"
                    android:layout_toStartOf="@+id/text_signup_or">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/linecolor"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/text_signup_or"
                    android:layout_toRightOf="@+id/text_signup_or"
                    android:layout_toEndOf="@+id/text_signup_or">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/linecolor"></View>
                </LinearLayout>


            </RelativeLayout>

            <EditText
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/edit_email"
                android:hint="Email Address"
                android:gravity="center"
                android:background="@drawable/blackborderedittext"
                android:padding="@dimen/dp_10"/>

            <EditText
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit_password"
                android:hint="Password"
                android:gravity="center"
                android:background="@drawable/blackborderedittext"
                android:padding="@dimen/dp_10"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:gravity="right"
                    android:id="@+id/text_forgot"/>
            </LinearLayout>

            <Button
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:textAllCaps="false"
                android:text="Sign In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_signin"
                android:background="@color/orange"
                android:layout_marginBottom="@dimen/dp_10"/>

        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>
