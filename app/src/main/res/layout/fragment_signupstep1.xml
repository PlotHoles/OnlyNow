<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sparecode.vipul.onlynow.fragments.Signupstep1Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="Already Have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_already" />

        <TextView
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/text_already"
            android:id="@+id/text_signin"
            android:textColor="@color/orange"/>

        <ScrollView
            android:id="@+id/scrollview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/text_already">


        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView6">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="First Name"
                    android:ems="10"
                    android:id="@+id/edit_firstname"
                    android:layout_weight="1"
                    android:singleLine="false"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Last Name"
                    android:ems="10"
                    android:id="@+id/edit_lastname"
                    android:layout_weight="1"
                    android:singleLine="false"/>
            </LinearLayout>

            <EditText
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email Address"
                android:ems="10"
                android:id="@+id/edit_email"
                android:singleLine="false"/>

            <EditText
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Confirm Email Address"
                android:ems="10"
                android:id="@+id/edit_confirmemail"
                android:singleLine="false"/>

            <EditText
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/edit_password"
                android:singleLine="false"/>

            <EditText
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Birthday"
                android:ems="10"
                android:id="@+id/edit_birthday"
                android:singleLine="false"/>

            <RadioGroup
                android:layout_marginTop="@dimen/dp_5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:button="@drawable/radiobutton"/>

                <RadioButton
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:button="@drawable/radiobutton"/>
            </RadioGroup>

            <CheckBox
                android:layout_marginTop="@dimen/dp_5"
                android:text="Agree T&amp;Cs"
                android:paddingLeft="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:button="@drawable/checkboxbutton"/>


            <CheckBox
                android:layout_marginTop="@dimen/dp_5"
                android:text="Receive Emails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:id="@+id/checkBox2"
                android:button="@drawable/checkboxbutton"/>

            <Button
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/orange"
                android:text="NEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNext"
                android:layout_marginBottom="@dimen/dp_10"/>
        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>
