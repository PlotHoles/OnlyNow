<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sparecode.vipul.onlynow.fragments.CouponFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                app:srcCompat="@drawable/natural"
                android:id="@+id/coupon_image"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/details_page_next_icon"
                android:id="@+id/coupon_next_image"
                android:layout_gravity="center_vertical|right"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/ratingrounder"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_5">
                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coupon_rating"
                    android:textColor="@color/white"
                    app:typeface="lato_bold"
                    android:id="@+id/text_rating"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:numStars="1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressBackgroundTint="@color/white"/>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
        <com.sparecode.vipul.onlynow.widgets.LatoTextView
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/coupon_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_coupon_desc"
            app:typeface="lato_regular"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:text="@string/coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/text_validtime"
                app:typeface="lato_regular"/>

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:text="@string/coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/text_coupon_category"
                app:typeface="lato_regular"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/textView36">

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="Valid until:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    app:typeface="lato_regular"/>

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/text_validdate"
                    app:typeface="lato_regular"/>
            </LinearLayout>


            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:text="@string/coupon_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/text_coupon_area"
                app:typeface="lato_regular"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_coupon"
                app:typeface="lato_bold"/>

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/they_way_to_use_this_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_coupon_description"
                app:typeface="lato_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/shop_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView39"
                app:typeface="lato_bold"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20">
                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_shopname"
                    app:typeface="lato_regular"/>

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="@string/phone_number_or_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_phone"
                    app:typeface="lato_regular"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/coupon_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView42"
                app:typeface="lato_bold"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/coupon_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_couponname"
                    app:typeface="lato_regular"/>

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/free_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_coupon_des"
                    app:typeface="lato_regular"/>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/other_coupon_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_other_coupon"
                app:typeface="lato_bold"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/coupon_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_other_coupon_name"
                    app:typeface="lato_regular"/>

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/valid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_validothertime"
                    app:typeface="lato_regular"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/headercolor"
                android:text="@string/other_coupon_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_othercoupondetails"
                app:typeface="lato_bold"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/coupon_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_othercouponnames"
                    app:typeface="lato_regular"/>

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:text="@string/valid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_validothercoupon"
                    app:typeface="lato_regular"/>
            </LinearLayout>

        </LinearLayout>

        <com.sparecode.vipul.onlynow.widgets.LatoButton
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/headercolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            app:typeface="lato_bold"
            android:id="@+id/button_savecoupon"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
