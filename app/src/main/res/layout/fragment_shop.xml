<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sparecode.vipul.onlynow.fragments.ShopFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/details_page_next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView19" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView20"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:background="@drawable/ratingrounder"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_4_2"
                    android:textColor="@color/white"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:numStars="1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressBackgroundTint="@color/white"/>
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:text="Ally Capellino Frank Brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView35" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout4"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/linearLayout4">

                <ImageButton
                    android:background="@color/headercolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/favouriteselector"
                    android:padding="@dimen/dp_10"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:layout_weight="1">

                <TextView
                    android:gravity="right"
                    android:text="Beauty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView51" />

                <TextView
                    android:gravity="right"
                    android:text="shinjuku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView52" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/headercolor"
                android:text="Phone number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView53" />

            <TextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="1234567890"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView54" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/headercolor"
                android:text="Web URL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView55" />

            <TextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="www.abcxyz.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView56" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/headercolor"
                android:text="Shop Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView57" />

            <TextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="Free Text."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView58" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/headercolor"
                android:text="Address in text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView59" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/notice_next_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView21" />

                <TextView
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="Free text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView21"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView61"
                    android:layout_toStartOf="@+id/imageView21" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
