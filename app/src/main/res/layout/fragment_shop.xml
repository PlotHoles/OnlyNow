<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sparecode.vipul.onlynow.fragments.ShopFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                app:srcCompat="@drawable/natural"
                android:id="@+id/imageView9"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/details_page_next_icon"
                android:id="@+id/imageView11"
                android:layout_gravity="center_vertical|right"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/ratingrounder"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_5">
                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coupon_rating"
                    android:textColor="@color/white"
                    app:typeface="lato_bold"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:numStars="1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressBackgroundTint="@color/white"/>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

        <com.sparecode.vipul.onlynow.widgets.LatoTextView
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/coupon_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView35"
            app:typeface="lato_regular"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout4"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/linearLayout4">

                <ImageButton
                    android:background="@color/headercolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:src="@drawable/favouriteselector"
                    android:padding="@dimen/dp_10"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:layout_weight="1">

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:gravity="right"
                    android:text="@string/coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView51"
                    app:typeface="lato_regular"/>

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:gravity="right"
                    android:text="@string/coupon_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView52"
                    app:typeface="lato_regular"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView53"
                app:typeface="lato_bold"/>

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView54"
                app:typeface="lato_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView55"
                app:typeface="lato_bold"/>

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView56"
                app:typeface="lato_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView57"
                app:typeface="lato_bold"/>

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/free_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView58"
                app:typeface="lato_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:textColor="@color/headercolor"
                android:text="@string/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView59"
                app:typeface="lato_bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/notice_next_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView21" />

                <com.sparecode.vipul.onlynow.widgets.LatoTextView
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/free_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView21"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView61"
                    android:layout_toStartOf="@+id/imageView21"
                    app:typeface="lato_regular"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
