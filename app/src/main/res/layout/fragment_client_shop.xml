<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sparecode.vipul.onlynow.fragments.ClientShopFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    app:srcCompat="@drawable/natural"
                    android:id="@+id/coupon_image"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/details_page_next_icon"
                    android:id="@+id/next_image"
                    android:layout_gravity="center_vertical|right"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <com.sparecode.vipul.onlynow.widgets.LatoTextView
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/ally_capellino_frank_brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coupon_name"
            android:textColor="@color/black"
            app:typeface="lato_regular"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:text="@string/coupon_type"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupon_type"
                app:typeface="lato_regular"/>
            <com.sparecode.vipul.onlynow.widgets.LatoTextView
                android:text="@string/coupon_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coupon_place"
                app:typeface="lato_regular"/>
        </LinearLayout>

        <com.sparecode.vipul.onlynow.widgets.LatoEditText
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/editprofile"
            android:padding="@dimen/dp_10"
            android:textColor="@color/headercolor"
            android:textColorHint="@color/headercolor"
            android:hint="@string/editphonenumber"
            android:text=""
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editnumber"
            app:typeface="lato_regular"
            android:clickable="true"/>

        <com.sparecode.vipul.onlynow.widgets.LatoEditText
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/editprofile"
            android:padding="@dimen/dp_10"
            android:textColor="@color/headercolor"
            android:textColorHint="@color/headercolor"
            android:hint="@string/editurl"
            android:text=""
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editurl"
            app:typeface="lato_regular"
            android:clickable="true" />

        <com.sparecode.vipul.onlynow.widgets.LatoEditText
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/editprofile"
            android:padding="@dimen/dp_10"
            android:textColor="@color/headercolor"
            android:hint="@string/editshopdetails"
            android:textColorHint="@color/headercolor"
            android:text=""
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editshopdetail"
            app:typeface="lato_regular"
            android:clickable="true"/>

        <com.sparecode.vipul.onlynow.widgets.LatoEditText
            android:layout_marginTop="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:background="@drawable/editprofile"
            android:textColor="@color/headercolor"
            android:hint="@string/editaddress"
            android:textColorHint="@color/headercolor"
            android:text=""
            android:textAllCaps="false"
            android:gravity="top"
            android:drawableEnd="@drawable/notice_next_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editaddress"
            app:typeface="lato_regular"
            android:clickable="true"/>

        <com.sparecode.vipul.onlynow.widgets.LatoButton
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/orange"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/savedetail"
            android:layout_marginBottom="@dimen/dp_10"
            app:typeface="lato_bold"/>
    </LinearLayout>

</FrameLayout>
    </ScrollView>
</LinearLayout>